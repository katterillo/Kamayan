            <%= f.fields_for :ingredients do |f| %>
                  <%= render 'ingredient_fields', f: f %>
            <%end%>
            <div class="py-2 rounded text-sm group inline py-1 px-2 rounded text-green-dark border-green-dark">
                  <%= link_to_add_association 'Add Ingredient', f, :ingredients, class:"" %>            
            </div>
      </div>
      <%= f.submit "Search", class:"group relative m-auto flex justify-center py-2 px-4 border border-green-dark text-sm font-medium rounded-md text-green-dark bg-white hover:text-white hover:bg-green-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
<% end %>