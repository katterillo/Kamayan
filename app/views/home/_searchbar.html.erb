<%= form_with url: "/recipes", class: "shadow absolute", method: :get do |form| %>
      <%= form.search_field :query, class: "shadow border border-4 outline-none border-gray-500 rounded bg-gray-200 focus:bg-white" %>
      <%= form.submit "Search", class: "rounded shadow border-1 border-gray-500 font-custom bg-gray-200 text-gray-700 hover:bg-gray-400" %>
<% end %>