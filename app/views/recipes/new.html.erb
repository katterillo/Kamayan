<%= render partial: "shared/header" %>
<h1>Add new recipe</h1>

<%= form_with scope: :recipe,
url: recipes_url,
local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
