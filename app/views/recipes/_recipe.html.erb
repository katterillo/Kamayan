<%= link_to recipe_path(id: recipe["id"]) do %>
 <div class="border border-4 shadow hover:bg-gray-200">
  <h3 class="font-custom"> 
    <%= recipe["title"] %>
    <center>
    <%= image_tag recipe["image"] %>
    </center>
    <%= recipe["usedIngredientCount"] %> ingredient(s) included.
    <br>
    <%= recipe["missedIngredientCount"]%> missing ingredients:
    <h4 class="text-xs break-words text-center">
      <%recipe["missedIngredients"].each do |rec|%>
      <%= rec["name"]%>
      <%end%>
    </h4>
  </h3>
</div>
<%end%>