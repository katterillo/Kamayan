<div class="">
    <%= render partial: "shared/header" %>
    <div class="w-11/12 right-0 m-auto py-3">
    <%= link_to 'Edit', edit_my_recipe_path(@recipe),  class: "ml-auto group font-medium text-lg border-2 border-blue-700 text-blue-700 py-2 px-4 hover:text-white rounded hover:bg-blue-700 hover:border-transparent" %>
    <%= link_to "Destroy", my_recipe_path(@recipe), class: "ml-auto group font-medium text-lg border-2 border-red-700 text-red-700 py-2 px-4 hover:text-white rounded hover:bg-red-700 hover:border-transparent",
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </div>
    <div class="pl-20 pr-16 pt-20 m-auto">
        <div class="flex flex-row">
            <div class="flex flex-col w-6/12 ">
                <h1 class="font-bold text-5xl text-black">
                    <%= @recipe.title %>
                </h1>
            </div>
        </div>
        <div class="flex flex-row pb-6 mt-20">
        <div class="flex flex-col">
         <h2 class=" text-2xl font-bold mt-6">
                Steps
        </h2>
        <% if @recipe.steps.any? %>
            <% @recipe.steps.each do |step| %>
                <br><%= step.order %>.
                <%= step.description %>
            <%end%>
        <% end %>
        </div>
            <div class="mb-6 px-32 ml-auto w-5/12 h-4/6 top-0">
                <h2 class="-mb-16 text-2xl font-bold mt-6">
                Ingredients
                </h2>
                <h3 class="mt-8 leading-loose">
                    <% if @recipe.ingredients.any? %>
                        <% @recipe.ingredients.each do |ingredient| %>
                        <br><%= ingredient.measurement %>
                        <%= ingredient.description %>
                        <%end%>
                    <%end%>
                </h3>
            </div>
        </div>
</div>