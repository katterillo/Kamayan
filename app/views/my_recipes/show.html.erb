<div>
    <%= render partial: "shared/header" %>
    <div class="w-11/12 right-0 m-auto py-3">
        <%= link_to 'Edit', edit_my_recipe_path(@recipe),  class: "ml-auto group font-medium text-lg border-2 border-blue-700 text-blue-700 py-2 px-4 hover:text-white rounded hover:bg-blue-700 hover:border-transparent" %>
        <%= link_to "Destroy", my_recipe_path(@recipe), class: "ml-auto group font-medium text-lg border-2 border-red-700 text-red-700 py-2 px-4 hover:text-white rounded hover:bg-red-700 hover:border-transparent",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
    </div>
    <div class="m-auto">
        <h1 class="pl-36 pr-16 pt-10 m-auto font-bold text-5xl text-black">
            <%= @recipe.title %>
        </h1>
        <h3 class="leading-loose mt-10 pl-36 pr-16">
            <%=@recipe.description%>
        </h3>
    </div>
    <div class="pl-64 pr-32 mt-10 flex justify-between leading-loose">
        <div class="pr-32 ">
            <h2 class="text-2xl font-bold">
                Steps
            </h2>
            <h3 class="leading-loose">
                <% if @recipe.steps.any? %>
                    <% @recipe.steps.each do |step| %>
                        <br><%= step.order %>.
                        <%= step.description %>
                    <%end%>
                <%end%>
             </h3>
        </div>
        <div class="">
            <h2 class="pr-80 text-2xl font-bold">
                Ingredients
            </h2>
            <% if @recipe.ingredients.any? %>
                <% @recipe.ingredients.each do |ingredient| %>
                    <br>â€¢<%= ingredient.measurement %>
                    <%= ingredient.description %>
                <%end%>
            <%end%>
        </div>
    </div>
</div>